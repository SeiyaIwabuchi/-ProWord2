import javafx.application.*;
import javafx.stage.*;
import javafx.scene.*;
import javafx.scene.control.*;
import javafx.scene.layout.*;
import javafx.scene.layout.BorderPane;
import javafx.geometry.*;

public class Sample1 extends Application{
	private Button[] bt = new Button[5];
	
	public static void main(String[] args) {
		launch(args);
	}
	public void start(Stage stage) throws Exception{
		bt[0] = new Button("Top");
		bt[1] = new Button("Buttom");
		bt[2] = new Button("Center");
		bt[3] = new Button("Left");
		bt[4] = new Button("Right");
		
		javafx.scene.layout.BorderPane bp = new javafx.scene.layout.BorderPane();
		
		bp.setTop(bt[0]);
		//bp.setBottom(bt[0]);
		bp.setCenter(bt[0]);
		bp.setLeft(bt[0]);
		bp.setRight(bt[0]);
		
		for (int i=0;i<bt.length;i++) {
			bp.setAlignment(bt[i], Pos.CENTER);
		}
		
		Scene sc = new Scene(bp, 300, 200);
		
		stage.setScene(sc);
		
		stage.setTitle("ƒTƒ“ƒvƒ‹");
		stage.show();
		//
	}
}